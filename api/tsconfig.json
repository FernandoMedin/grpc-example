{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src",
    "target": "es6",
    "lib": ["dom", "es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "lib": [
    "es2018",
    "dom"
  ],
  "include": [
    "v*/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./**/*.spec.ts"
  ]
}
